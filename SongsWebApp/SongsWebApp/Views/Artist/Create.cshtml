@model SongsWebApp.Models.Entities.Artist

<h2 class="accordion-header">Create Artist:</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CountryOfOrigin" class="form-label">Country Of Origin</label>
        <input asp-for="CountryOfOrigin" class="form-control" />
        <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DebutYear" class="form-label">Debut Year</label>
        <input asp-for="DebutYear" class="form-control" />
        <span asp-validation-for="DebutYear" class="text-danger"></span>
    </div>

    <button class="btn btn-primary btn-lg" type="submit">Submit</button>
</form>